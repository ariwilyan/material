<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

    <!-- Master Material Module Category -->
        <record id="module_category_material" model="ir.module.category">
            <field name="name">Master Material Module Category</field>
        </record>

    <!-- Master Material Group Read -->
        <record id="master_material_group_read" model="res.groups">
			<field name="category_id" ref="master_material.module_category_material"/>
            <field name="name">Master Material Read</field>
        </record>

        <record id="master_material_access_read" model="ir.model.access">
            <field name="model_id" ref="model_master_material"/>
            <field name="name">master_material read</field>
            <field name="group_id" ref="master_material_group_read"/>
            <field name="perm_read">1</field>
        </record>

    <!-- Master Material Group Update -->
        <record id="master_material_group_update" model="res.groups">
			<field name="category_id" ref="master_material.module_category_material"/>
            <field name="name">Master Material Update</field>
            <field name="implied_ids" eval="[(4, ref('master_material_group_read'))]"/>
        </record>

        <record id="master_material_access_update" model="ir.model.access">
            <field name="model_id" ref="model_master_material"/>
            <field name="name">master_material update</field>
            <field name="group_id" ref="master_material_group_update"/>
            <field name="perm_create">1</field>
            <field name="perm_write">1</field>
        </record>

    <!-- Master Material Group Delete -->
        <record id="master_material_group_delete" model="res.groups">
			<field name="category_id" ref="master_material.module_category_material"/>
            <field name="name">Master Material Delete</field>
            <field name="implied_ids" eval="[(4, ref('master_material_group_read'))]"/>
        </record>

        <record id="master_material_access_delete" model="ir.model.access">
            <field name="model_id" ref="model_master_material"/>
            <field name="name">master_material delete</field>
            <field name="group_id" ref="master_material_group_delete"/>
            <field name="perm_unlink">1</field>
        </record>
    
    <!-- Group User -->
        <record id="master_material_group_user" model="res.groups">
			<field name="category_id" ref="master_material.module_category_material"/>
            <field name="name">Group User</field>
            <field name="implied_ids" eval="[
                (4, ref('master_material_group_read')),
                (4, ref('master_material_group_update')),
            ]"/>
        </record>

    <!-- Group Manager -->
        <record id="master_material_group_manager" model="res.groups">
			<field name="category_id" ref="master_material.module_category_material"/>
            <field name="name">Group Manager</field>
            <field name="implied_ids" eval="[
                (4, ref('master_material_group_user')),
                (4, ref('master_material_group_delete')),
            ]"/>
        </record>

    <!-- Group Admin -->
        <record id="master_material_group_sys_admin" model="res.groups">
            <field name="category_id" ref="master_material.module_category_material"/>
            <field name="name">System Admin</field>
            <field name="implied_ids" eval="[
                (4, ref('master_material_group_manager')),
            ]"/>
        </record> 

    </data>
</odoo>